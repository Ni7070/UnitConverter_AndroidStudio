<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/unitConverter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="141dp"
        android:background="#dab765"
        android:text="Unit Converter"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="#181817"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="normal"
        android:visibility="visible"
        app:fontFamily="serif-monospace" />


    <LinearLayout
        android:id="@+id/LL1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="202dp"
        android:orientation="horizontal"
        android:visibility="visible"
        android:layout_alignParentLeft="true"
        tools:ignore="RtlCompat">

        <Button
            android:id="@+id/area"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#9d5116"
            android:textAllCaps="false"
            android:text="Area"
            android:textColor="#cdab76"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/volume"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="#cdaa75"
            android:textAllCaps="false"
            android:text="Volume"
            android:textColor="#9e5218"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="ButtonStyle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LL2"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/LL1"
        android:orientation="horizontal"
        android:visibility="visible">

        <Button
            android:id="@+id/length"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#c59b68"
            android:text="Length"
            android:textAllCaps="false"
            android:textColor="#9e5218"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/mass"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="#9e5218"
            android:text="Mass"
            android:textAllCaps="false"
            android:textColor="#c59c69"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="ButtonStyle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LL3"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/LL2"
        android:orientation="horizontal"
        android:visibility="visible">

        <Button
            android:id="@+id/weight"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#9f531a"
            android:text="Temperature"
            android:textAllCaps="false"
            android:textColor="#c59c69"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/data"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="#c59c69"
            android:text="Data"
            android:textAllCaps="false"
            android:textColor="#a0541c"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="ButtonStyle" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LL4"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/LL3"
        android:orientation="horizontal"
        android:visibility="visible">

        <Button
            android:id="@+id/history"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_weight="1"
            android:background="#a69a9a"
            android:text="History"
            android:textColor="#0a0a0a"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="ButtonStyle" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LL5"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/LL4"
        android:orientation="horizontal"
        android:visibility="visible">

        <Button
            android:id="@+id/about"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_weight="1"
            android:background="#a69a9a"
            android:text="About"
            android:textColor="#0a0a0a"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="ButtonStyle" />


    </LinearLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="141dp"
        android:layout_height="123dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/logo" />


</RelativeLayout>